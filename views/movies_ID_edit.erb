<h1>Theatrix</h1>
<main>
    <h2>Editing Movie Info for: <%= @movie.name %></h2>

    <form action='/movies/<%= @movie.id %>' method='post'>
        <input name='_method' type='hidden' value='patch'>

        <label>
            Movie Name
            <input name='name' type='text' placeholder='<%= @movie.name %>'>
        </label>
        <label>
            Movie Runtime
            <input name='runtime' type='text' placeholder='<%= @movie.runtime %>'>
        </label>
        <label>
            Movie Poster
            <input name='poster' type='text' placeholder='<%= @movie.poster %>'>
        </label>
        <label>
            Movie Rating
            <input name='rating' type='text' placeholder='<%= @movie.rating %>'>
        </label>
        <button type='submit'>Go!</button>
    </form>

    <form action='/movies/<%= @movie.id %>' method='post'>
        <input name='_method' type='hidden' value='delete'>

        <button type='submit'>Delete Movie</button>
    </form>
</main>
