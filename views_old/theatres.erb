<h1>Theatrix</h1>
<main>
    <h2>Find Theatres</h2>
    <hr>

    <% if @theatres.any? %>
    <% @theatres.each_with_index do |theatre, i| %>
    <% if i > 0 %>
    <hr class='spacer'>
    <% end %>
    <a class='item' href='/theatres/<%= theatre.id %>'>
        <figure>
            <img src='<%= theatre.img %>' alt='Image of <%=theatre.name%>'>
        </figure>
        <h3><%= theatre.name %></h3>
        <h4><%= theatre.location || 'Sorry, we don\'t have the address for this one :(' %></h4>
    </a>
    <% end %>
    <% else %>
    <p class='none'>There aren't any theatres!</p>
    <% end %>

    <p class='new'>Don't see what you're looking for? Click <a href='/theatres/new'>here</a> to add a new theatre!</p>
</main>
